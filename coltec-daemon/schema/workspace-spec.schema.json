{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WorkspaceSpec",
  "type": "object",
  "required": [
    "devcontainer",
    "metadata",
    "name"
  ],
  "properties": {
    "devcontainer": {
      "$ref": "#/definitions/DevcontainerSpec"
    },
    "generated_at": {
      "default": null,
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "metadata": {
      "$ref": "#/definitions/WorkspaceMetadata"
    },
    "mounts": {
      "default": [],
      "type": "array",
      "items": {
        "$ref": "#/definitions/MountSpec"
      }
    },
    "name": {
      "type": "string"
    },
    "persistence": {
      "default": {
        "default_remote": null,
        "defaults": null,
        "enabled": false,
        "mode": "mounted",
        "mounts": [],
        "multi_scope_volumes": null,
        "remotes": {},
        "scope": "project",
        "sync": []
      },
      "allOf": [
        {
          "$ref": "#/definitions/PersistenceSpec"
        }
      ]
    },
    "secrets": {
      "default": [],
      "type": "array",
      "items": {
        "$ref": "#/definitions/SecretMount"
      }
    },
    "version": {
      "default": "1.0.0",
      "type": "string"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "CryptConfig": {
      "description": "Encryption configuration for rclone crypt remotes.",
      "type": "object",
      "required": [
        "password_env"
      ],
      "properties": {
        "directory_name_encryption": {
          "description": "Whether to encrypt directory names",
          "default": true,
          "type": "boolean"
        },
        "filename_encryption": {
          "description": "Filename encryption mode",
          "default": "standard",
          "allOf": [
            {
              "$ref": "#/definitions/FilenameEncryption"
            }
          ]
        },
        "password2_env": {
          "description": "Environment variable containing the salt (optional but recommended)",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "password_env": {
          "description": "Environment variable containing the encryption password",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "DevcontainerSpec": {
      "type": "object",
      "required": [
        "image"
      ],
      "properties": {
        "customizations": {
          "default": {
            "extensions": {
              "optional": [],
              "recommended": []
            },
            "settings": {
              "values": {}
            }
          },
          "allOf": [
            {
              "$ref": "#/definitions/VSCodeCustomization"
            }
          ]
        },
        "env": {
          "default": {},
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "features": {
          "default": [],
          "type": "array",
          "items": {
            "$ref": "#/definitions/FeatureRef"
          }
        },
        "image": {
          "$ref": "#/definitions/ImageRef"
        },
        "lifecycle": {
          "default": {
            "post_create": [],
            "post_start": []
          },
          "allOf": [
            {
              "$ref": "#/definitions/LifecycleHooks"
            }
          ]
        },
        "mounts": {
          "default": [],
          "type": "array",
          "items": {
            "$ref": "#/definitions/MountSpec"
          }
        },
        "run_args": {
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "template": {
          "description": "Template reference (optional, vestigial from old system)",
          "default": null,
          "anyOf": [
            {
              "$ref": "#/definitions/TemplateRef"
            },
            {
              "type": "null"
            }
          ]
        },
        "user": {
          "default": "vscode",
          "type": "string"
        },
        "workspace_folder": {
          "default": "/workspace",
          "type": "string"
        },
        "workspace_mount": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "FeatureRef": {
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "options": {
          "default": null
        }
      },
      "additionalProperties": false
    },
    "FilenameEncryption": {
      "description": "Filename encryption mode for rclone crypt remotes.",
      "oneOf": [
        {
          "description": "Full filename encryption (max ~143 characters)",
          "type": "string",
          "enum": [
            "standard"
          ]
        },
        {
          "description": "Lightweight rotation-based obfuscation (longer names allowed)",
          "type": "string",
          "enum": [
            "obfuscate"
          ]
        },
        {
          "description": "Names remain visible; only \".bin\" extensions are added",
          "type": "string",
          "enum": [
            "off"
          ]
        }
      ]
    },
    "ImageRef": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "digest": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "LifecycleHooks": {
      "type": "object",
      "properties": {
        "post_create": {
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "post_start": {
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "MountSpec": {
      "type": "object",
      "required": [
        "source",
        "target"
      ],
      "properties": {
        "extra": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "source": {
          "type": "string"
        },
        "target": {
          "type": "string"
        },
        "type": {
          "default": "volume",
          "allOf": [
            {
              "$ref": "#/definitions/MountType"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "MountType": {
      "type": "string",
      "enum": [
        "bind",
        "volume",
        "tmpfs",
        "symlink"
      ]
    },
    "MultiScopeVolumes": {
      "type": "object",
      "properties": {
        "environment": {
          "default": [],
          "type": "array",
          "items": {
            "$ref": "#/definitions/RcloneVolumeConfig"
          }
        },
        "global_refs": {
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "project_refs": {
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "PersistenceMode": {
      "type": "string",
      "enum": [
        "mounted",
        "replicated"
      ]
    },
    "PersistenceMount": {
      "type": "object",
      "required": [
        "name",
        "source",
        "target"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "target": {
          "type": "string"
        },
        "type": {
          "default": "symlink",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "PersistenceScope": {
      "type": "string",
      "enum": [
        "project",
        "environment"
      ]
    },
    "PersistenceSpec": {
      "type": "object",
      "properties": {
        "default_remote": {
          "description": "Default remote name used when sync paths don't specify one. Must reference a key in `remotes`.",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "defaults": {
          "description": "Default operation settings inherited by sync paths.",
          "default": null,
          "anyOf": [
            {
              "$ref": "#/definitions/SyncDefaults"
            },
            {
              "type": "null"
            }
          ]
        },
        "enabled": {
          "default": false,
          "type": "boolean"
        },
        "mode": {
          "default": "mounted",
          "allOf": [
            {
              "$ref": "#/definitions/PersistenceMode"
            }
          ]
        },
        "mounts": {
          "default": [],
          "type": "array",
          "items": {
            "$ref": "#/definitions/PersistenceMount"
          }
        },
        "multi_scope_volumes": {
          "default": null,
          "anyOf": [
            {
              "$ref": "#/definitions/MultiScopeVolumes"
            },
            {
              "type": "null"
            }
          ]
        },
        "remotes": {
          "description": "Named remote configurations. Keys are remote names referenced by sync paths.",
          "default": {},
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/RemoteConfig"
          }
        },
        "scope": {
          "default": "project",
          "allOf": [
            {
              "$ref": "#/definitions/PersistenceScope"
            }
          ]
        },
        "sync": {
          "default": [],
          "type": "array",
          "items": {
            "$ref": "#/definitions/SyncPath"
          }
        }
      },
      "additionalProperties": false
    },
    "RcloneVolumeConfig": {
      "type": "object",
      "required": [
        "mount_path",
        "name",
        "remote_path"
      ],
      "properties": {
        "exclude": {
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "interval": {
          "default": 300,
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "mount_path": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "priority": {
          "default": 2,
          "type": "integer",
          "format": "uint8",
          "minimum": 0.0
        },
        "read_only": {
          "default": false,
          "type": "boolean"
        },
        "remote_path": {
          "type": "string"
        },
        "sync": {
          "default": "bidirectional",
          "allOf": [
            {
              "$ref": "#/definitions/SyncDirection"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "RemoteConfig": {
      "description": "Named remote configuration for rclone backends.\n\nSupports both direct backends (s3, gcs, etc.) and wrapper backends (crypt).",
      "type": "object",
      "properties": {
        "bucket": {
          "description": "Bucket name (required for s3/gcs, not for crypt)",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "crypt": {
          "description": "Encryption configuration (required for crypt)",
          "default": null,
          "anyOf": [
            {
              "$ref": "#/definitions/CryptConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "options": {
          "description": "Backend-specific options (provider, endpoint, region, etc.) These map directly to rclone config options.",
          "default": {},
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "path_prefix": {
          "description": "Path prefix prepended to all remote_paths using this remote",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "type": {
          "description": "Backend type: \"s3\", \"gcs\", \"crypt\", etc.",
          "default": "s3",
          "type": "string"
        },
        "wrap_path": {
          "description": "Path within the wrapped remote",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "wrap_remote": {
          "description": "Base remote to wrap (required for crypt)",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "SecretMount": {
      "type": "object",
      "required": [
        "key",
        "mount_path",
        "provider"
      ],
      "properties": {
        "key": {
          "type": "string"
        },
        "mount_path": {
          "type": "string"
        },
        "provider": {
          "type": "string"
        },
        "read_only": {
          "default": true,
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "SyncDefaults": {
      "description": "Default operation settings for sync paths.",
      "type": "object",
      "properties": {
        "bwlimit": {
          "description": "Bandwidth limit (e.g., \"10M\", \"1G\") (rclone --bwlimit)",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "checkers": {
          "description": "Number of parallel checkers (rclone --checkers)",
          "default": null,
          "type": [
            "integer",
            "null"
          ],
          "format": "uint32",
          "minimum": 0.0
        },
        "transfers": {
          "description": "Number of parallel file transfers (rclone --transfers)",
          "default": null,
          "type": [
            "integer",
            "null"
          ],
          "format": "uint32",
          "minimum": 0.0
        }
      },
      "additionalProperties": false
    },
    "SyncDirection": {
      "type": "string",
      "enum": [
        "bidirectional",
        "pull-only",
        "push-only"
      ]
    },
    "SyncPath": {
      "type": "object",
      "required": [
        "name",
        "path",
        "remote_path"
      ],
      "properties": {
        "bwlimit": {
          "description": "Override bandwidth limit for this path (e.g., \"5M\")",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "checkers": {
          "description": "Override parallel checkers for this path",
          "default": null,
          "type": [
            "integer",
            "null"
          ],
          "format": "uint32",
          "minimum": 0.0
        },
        "direction": {
          "default": "bidirectional",
          "allOf": [
            {
              "$ref": "#/definitions/SyncDirection"
            }
          ]
        },
        "exclude": {
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "interval": {
          "default": 300,
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "name": {
          "description": "Unique name for this sync path",
          "type": "string"
        },
        "path": {
          "description": "Local filesystem path to sync",
          "type": "string"
        },
        "priority": {
          "default": 2,
          "type": "integer",
          "format": "uint8",
          "minimum": 0.0
        },
        "remote": {
          "description": "Override the default remote for this sync path",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "remote_path": {
          "description": "Remote path (supports {org}, {project}, {env} placeholders)",
          "type": "string"
        },
        "transfers": {
          "description": "Override parallel file transfers for this path",
          "default": null,
          "type": [
            "integer",
            "null"
          ],
          "format": "uint32",
          "minimum": 0.0
        }
      },
      "additionalProperties": false
    },
    "TemplateRef": {
      "type": "object",
      "required": [
        "name",
        "path"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "overlays": {
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "path": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "VSCodeCustomization": {
      "type": "object",
      "properties": {
        "extensions": {
          "default": {
            "optional": [],
            "recommended": []
          },
          "allOf": [
            {
              "$ref": "#/definitions/VSCodeExtensions"
            }
          ]
        },
        "settings": {
          "default": {
            "values": {}
          },
          "allOf": [
            {
              "$ref": "#/definitions/VSCodeSettings"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "VSCodeExtensions": {
      "type": "object",
      "properties": {
        "optional": {
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "recommended": {
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "VSCodeSettings": {
      "type": "object",
      "properties": {
        "values": {
          "default": {},
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "WorkspaceMetadata": {
      "type": "object",
      "required": [
        "org",
        "project"
      ],
      "properties": {
        "description": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "environment": {
          "default": "dev",
          "type": "string"
        },
        "org": {
          "type": "string"
        },
        "project": {
          "type": "string"
        },
        "tags": {
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  }
}
